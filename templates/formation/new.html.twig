{% extends 'base.html.twig' %}

{% block title %}Add New Formation{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="mt-4">Add New Formation</h1>
        <div class="row">
            <div class="col-md-6 offset-md-3">
                {{ form_start(form) }}
                   <div class="mb-3">
                        {{ form_label(form.id, 'Formation ID', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.id, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="mb-3">
                        {{ form_label(form.date, 'date', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.date, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="mb-3">
                        {{ form_label(form.nom, 'nom', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="mb-3">
                        {{ form_label(form.prix, 'prix', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.prix, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="mb-3">
                        {{ form_label(form.id_module, 'ID module', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.id_module, {'attr': {'class': 'form-control'}}) }}
                    </div>
                   
                    <button type="submit" class="btn btn-primary">Save</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
