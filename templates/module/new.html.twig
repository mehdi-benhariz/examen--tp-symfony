{% extends 'base.html.twig' %}

{% block title %}Add New Module{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="mt-4">Add New Module</h1>
        <div class="row">
            <div class="col-md-6 offset-md-3">
                {{ form_start(form) }}
                    <div class="mb-3">
                        {{ form_label(form.id_module, 'Module ID', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.id_module, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="mb-3">
                        {{ form_label(form.nom, 'Nom', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="mb-3">
                        {{ form_label(form.duree, 'Duree', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.duree, {'attr': {'class': 'form-control'}}) }}
                    </div>
                  
                    <button type="submit" class="btn btn-primary">Save</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
